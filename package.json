    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@diegofrayo/eslint-config": "^1.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "browser-sync": "^2.26.7",
    "connect-history-api-fallback": "^1.6.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.2.0",
