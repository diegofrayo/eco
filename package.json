    "gulp-util": "^3.0.8",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "node-cmd": "^3.0.0",
    "prettier": "^1.18.2",
    "style-loader": "^0.23.1",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0",
    "webpack-hot-middleware": "^2.25.0",
    "yargs": "^13.3.0"
